<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/aplikasi"
        android:label="@string/app_name"
        android:roundIcon="@drawable/aplikasi"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jukang"
        tools:targetApi="31">
        <activity
            android:name=".view.auth.regis.RegisterActivity"
            android:theme="@style/Theme.Main"
            android:exported="false" />
        <activity
            android:name=".view.auth.welcome.WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Main" />
        <activity
            android:name=".view.dashboard.MainActivity"
            android:exported="false" />
        <activity
            android:name=".view.auth.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>